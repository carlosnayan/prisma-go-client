var (
	loggerConfigOnce sync.Once
)

func configureLoggerFromConfig() {
	loggerConfigOnce.Do(func() {
		wd, err := os.Getwd()
		if err != nil {
			return
		}

		dir := wd
		for {
			configPath := filepath.Join(dir, "prisma.conf")
			if _, err := os.Stat(configPath); err == nil {
				configDir := filepath.Dir(configPath)
				envPath := filepath.Join(configDir, ".env")
				if _, err := os.Stat(envPath); err == nil {
					_ = loadDotEnvFile(envPath)
				}

				data, err := os.ReadFile(configPath)
				if err != nil {
					return
				}

				logLevels := parseLogLevels(string(data))
				if len(logLevels) > 0 {
					builder.SetLogLevels(logLevels)
				}
				return
			}

			parent := filepath.Dir(dir)
			if parent == dir {
				return
			}
			dir = parent
		}
	})
}

func loadDotEnvFile(envPath string) error {
	file, err := os.Open(envPath)
	if err != nil {
		return err
	}
	defer file.Close()

	scanner := bufio.NewScanner(file)
	for scanner.Scan() {
		line := strings.TrimSpace(scanner.Text())
		if line == "" || strings.HasPrefix(line, "#") {
			continue
		}
		parts := strings.SplitN(line, "=", 2)
		if len(parts) != 2 {
			continue
		}
		key := strings.TrimSpace(parts[0])
		value := strings.TrimSpace(parts[1])
		if len(value) >= 2 {
			if (value[0] == '"' && value[len(value)-1] == '"') || (value[0] == '\'' && value[len(value)-1] == '\'') {
				value = value[1 : len(value)-1]
			}
		}
		os.Setenv(key, value)
	}
	return scanner.Err()
}

func parseLogLevels(data string) []string {
	var levels []string
	inDebugSection := false
	scanner := bufio.NewScanner(strings.NewReader(data))
	for scanner.Scan() {
		line := strings.TrimSpace(scanner.Text())
		if line == "" || strings.HasPrefix(line, "#") {
			continue
		}
		if line == "[debug]" {
			inDebugSection = true
			continue
		}
		if strings.HasPrefix(line, "[") {
			inDebugSection = false
			continue
		}
		if inDebugSection && strings.HasPrefix(line, "log") {
			idx := strings.Index(line, "=")
			if idx == -1 {
				continue
			}
			value := strings.TrimSpace(line[idx+1:])
			if strings.HasPrefix(value, "[") && strings.HasSuffix(value, "]") {
				value = value[1 : len(value)-1]
				for _, item := range strings.Split(value, ",") {
					item = strings.TrimSpace(item)
					item = strings.Trim(item, "\"'")
					if item != "" {
						levels = append(levels, item)
					}
				}
			}
		}
	}
	return levels
}

