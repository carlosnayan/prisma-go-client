func getDatabaseURLFromConfig() (string, error) {
	wd, err := os.Getwd()
	if err != nil {
		return "", err
	}

	dir := wd
	for {
		configPath := filepath.Join(dir, "prisma.conf")
		if _, err := os.Stat(configPath); err == nil {
			data, err := os.ReadFile(configPath)
			if err != nil {
				return "", err
			}

			url := parseDatasourceURL(string(data))
			if url == "" {
				return "", nil
			}

			if strings.HasPrefix(url, "env(\"") {
				end := strings.Index(url, "\")")
				if end > 5 {
					varName := url[5:end]
					if value := os.Getenv(varName); value != "" {
						return value, nil
					}
					return "", nil
				}
			} else if strings.HasPrefix(url, "env('") {
				end := strings.Index(url, "')")
				if end > 5 {
					varName := url[5:end]
					if value := os.Getenv(varName); value != "" {
						return value, nil
					}
					return "", nil
				}
			}

			if strings.Contains(url, "${") {
				url = os.ExpandEnv(url)
			}

			return url, nil
		}

		parent := filepath.Dir(dir)
		if parent == dir {
			return "", nil
		}
		dir = parent
	}
}

func parseDatasourceURL(data string) string {
	inDatasource := false
	scanner := bufio.NewScanner(strings.NewReader(data))
	for scanner.Scan() {
		line := strings.TrimSpace(scanner.Text())
		if line == "" || strings.HasPrefix(line, "#") {
			continue
		}
		if line == "[datasource]" {
			inDatasource = true
			continue
		}
		if strings.HasPrefix(line, "[") {
			inDatasource = false
			continue
		}
		if inDatasource && strings.HasPrefix(line, "url") {
			idx := strings.Index(line, "=")
			if idx == -1 {
				continue
			}
			value := strings.TrimSpace(line[idx+1:])
			if len(value) >= 2 {
				if (value[0] == '"' && value[len(value)-1] == '"') || (value[0] == '\'' && value[len(value)-1] == '\'') {
					value = value[1 : len(value)-1]
				}
			}
			return value
		}
	}
	return ""
}

